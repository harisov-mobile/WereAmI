<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_100">

    <ImageView
        android:id="@+id/location_image_view"
        android:layout_width="@dimen/splash_location_icon_size"
        android:layout_height="@dimen/splash_location_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43"

        app:srcCompat="@drawable/ic_location" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/splash_title_margin"

        android:text="@string/splash_title"
        android:textSize="@dimen/splash_title_text_size"
        android:textStyle="bold"
        android:textColor="@color/blue_700"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_image_view"

        />

</androidx.constraintlayout.widget.ConstraintLayout>